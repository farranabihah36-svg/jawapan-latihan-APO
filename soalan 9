studentname = input("Enter your name:")
firstsubject = int(input("Enter the marks for the first subject:"))
secondsubject = int(input("Enter the marks for the second subject:"))
thirtsubject = int(input("Enter the marks for the thirt subject:"))

total_marks = firstsubject + secondsubject + thirtsubject
average_marks = total_marks / 3

print ("The total marks:" , total_marks )
print ("The average marks:" , average_marks )
